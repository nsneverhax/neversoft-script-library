script setup_main_button_event_mappings 
	SetButtonEventMappings {
		PS3 = ($ps3_pad)
		Xenon = ($xenon_pad)
		windx = ($windx_pad)
	}
endscript

script setup_controller_button_event_mappings \{guitar = 0
		Flip = 0}
	if NOT (<guitar>)
		<Xenon> = $xenon_pad
		<windx> = $windx_pad
		<PS3> = $ps3_pad
	elseif NOT (<Flip>)
		<Xenon> = $xenon_guitar
		<windx> = $windx_guitar
		<PS3> = $ps3_guitar
	else
		<Xenon> = $xenon_guitar_flip
		<windx> = $windx_guitar_flip
		<PS3> = $ps3_guitar_flip
	endif
	AddArrayElement array = [] element = (<controller>)
	SetButtonEventMappings {
		PS3 = (<PS3>)
		Xenon = (<Xenon>)
		windx = (<windx>)
		devices = (<array>)
		CLEAR
	}
endscript

script get_handlers_for_all_buttons \{event_script = nullscript
		event_params = {
		}}
	event_handlers = [
		{pad_btn_top <event_script> params = <event_params>}
		{pad_btn_right <event_script> params = <event_params>}
		{pad_btn_bottom <event_script> params = <event_params>}
		{pad_btn_left <event_script> params = <event_params>}
		{pad_start <event_script> params = <event_params>}
		{pad_select <event_script> params = <event_params>}
		{pad_L1 <event_script> params = <event_params>}
		{pad_R1 <event_script> params = <event_params>}
	]
	return event_handlers = <event_handlers>
endscript
